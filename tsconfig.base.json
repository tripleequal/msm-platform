{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@msm/admin": ["libs/admin/src/index.ts"],
      "@msm/core": ["libs/core/src/index.ts"],
      "@msm/core/utils": ["libs/core/src/utils/index.ts"],
      "@msm/students": ["libs/students/src/index.ts"],
      "@msm/teachers": ["libs/teachers/src/index.ts"],
      "@msm/ui": ["libs/ui/src/index.ts"],
      "@mui/styled-engine": ["./node_modules/@mui/styled-engine-sc"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
